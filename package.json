{
  "name": "@ecency/render-helper",
  "version": "2.0.17",
  "description": "Markdown+Html Render helper",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "jest",
    "test:watch": "npm test -- --watch",
    "cover": "nyc --check-coverage npm run test:only",
    "lint": "eslint ./src/**/*.ts",
    "build": "npm run build:types && npm run build:js",
    "build:js": "cross-env BABEL_ENV=production babel src --out-dir lib --extensions \\\".ts\\\" --source-maps",
    "build:types": "tsc --emitDeclarationOnly"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecency/ecency-render-helper"
  },
  "author": "Ecency <hello@ecency.com>",
  "license": "MIT",
  "homepage": "https://github.com/ecency/ecency-render-helper",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/preset-typescript": "^7.12.17",
    "@types/he": "^1.1.1",
    "@types/jest": "^26.0.20",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.31",
    "@types/remarkable": "^2.0.1",
    "@types/xmldom": "^0.1.30",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.5.0",
    "cross-env": "^5.1.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^26.6.3",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^26.5.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "he": "^1.2.0",
    "lru-cache": "^5.1.1",
    "multihashes": "0.4.13",
    "path": "^0.12.7",
    "querystring": "^0.2.0",
    "remarkable": "^2.0.1",
    "url": "^0.11.0",
    "xmldom": "^0.1.27",
    "xss": "^1.0.8"
  }
}
