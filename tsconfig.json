    "outDir": "./lib/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "declaration": true,
    "rootDir": "src",
    "esModuleInterop": true
  },
  "exclude": ["./**/*.spec.ts", "jest.config.js", "./src/test/**/*.ts"]
}
